<div class="dialog-backdrop page__dialog-backdrop">
    <div class="dialog page__dialog" role="dialog" aria-labelledby="dialog-title" aria-describedby="dialog-description" aria-modal="true">
        <div class="dialog__inner">
            <h1 class="dialog__title" id="dialog-title" style="text-align: center">Dialog title</h1>
            <p class="dialog__description" id="dialog-description" style="text-align: center">Dialog description</p>
            <button class="dialog__close" type="button" aria-label="Close dialog"
                    onclick="document.body.removeChild(document.querySelector('.dialog-backdrop'));document.location.reload();document.body.removeChild(document.querySelector('.dialog'))">
                <svg class="svg-icon dialog__close-icon" aria-hidden="true">
                    <use xlink:href="{{ asset('/bundles/frontend/img/icons/svg/sprite.symbol.svg') }}#close"></use>
                </svg>
            </button>
        </div>
    </div>
</div>